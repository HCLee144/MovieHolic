@model prjMovieHolic.Models.TArticle

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
<!-- Bootstrap ICONS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/style.css">
<link rel="stylesheet" href="~/css/myStyle.css">
<style>
    .left {
        margin-top: 80px;
    }
    .container {
        width: 880px;
    }
</style>
}

<h4>發表評論</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="FMemberId" class ="form-control" type="hidden" asp-items="ViewBag.FMemberId"/>
            </div>
            <div class="form-group">
                <label class="control-label">電影名稱</label>
                <select asp-for="FMovieId" class ="form-control" asp-items="ViewBag.FMovieId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FScore" class="control-label"></label>
                <input asp-for="FScore" class="form-control" />
                <span asp-validation-for="FScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">評論標題</label>
                <input asp-for="FTitle" class="form-control" />
                <span asp-validation-for="FTitle" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="control-label">評論文章內容</label>
                <input asp-for="FBlockJson" class="form-control" type="hidden" />
                <span asp-validation-for="FBlockJson" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="button" value="發文" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
