@model prjMovieHolic.ViewModels.CListOrderDetailsViewModel
<div id="page2">
    <div class="body1">
        <div class="">
            <div class="body3">
                <div class="main">
                    <!-- content -->
                    <section id="content">
                        <div class="wrapper">
                            <!--步驟圈圈在這裡-->
                            <div class="orderStep">
                                <ul>
                                    <li class="liInOrderstep">選擇時段</li>
                                    <li><img src="images/menu_marker.png" alt=""></li>
                                    <li class="liInOrderstep">選擇票種</li>
                                    <li><img src="images/menu_marker.png" alt=""></li>
                                    <li class="liInOrderstep">選擇座位</li>
                                    <li><img src="images/menu_marker.png" alt=""></li>
                                    <li class="liInOrderstep">配餐選擇</li>
                                    <li><img src="images/menu_marker.png" alt=""></li>
                                    <li class="liInOrderstephere">送出訂單</li>
                                </ul>
                            </div>
                            <!--這裡開始訂票-->
                            <div class="orderBox">
                                <div>
                                    <figure>
                                        <h4>@Model.selectedMovieName_od</h4>
                                        @{
                                            string showMoviePoster = $"{Model.selectedMovieID_od}.jpg";
                                        }
                                        <img class="orderMovieImage" src="~/images//moviePosters/@Model.selectedMovieID_od/@showMoviePoster">
                                    </figure>
                                </div>
                                <div class="pick">
                                    <div class="alreadyOrder">
                                        <h3>訂單內容</h3>
                                        <ul>
                                            <li><span>時　　間</span>@Model.selecteDate_od</li>
                                            <li><span>影　　廳</span>@Model.theaterName_od</li>
                                            <li><span>票種張數</span>@Model.tickets_od</li>
                                            <li><span>總　　價</span>830</li>
                                            <li><span>座　　位</span>@Model.seats_od</li>
                                            <li><span>套餐項目</span>甲賽</li>
                                            <li><span class="labUsingCoupon">使用優惠</span><input class="txtUsingCoupon" type="text"><input class="btnGoToCoupon" type="button" value="查看優惠"></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <button class="button toRight" id="nextStep">送出</button>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        const nextStep = document.querySelector('#nextStep');
        nextStep.addEventListener('click', async () => {
            const response = await postData('https://sandbox-api-pay.line.me/v3/payments/request');
            const data = await response.json();
        })

        function postData(url) {
            const response =return fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-LINE-ChannelId': '1661019081',
                    'X-LINE-Authorization': '92369e0d89e64d3a3d5b32dc9005f732',
                    'X-LINE-Authorization-Nonce': UUID.randomUUID().toString()
                },
                body: JSON.stringify(body)
            })
        }

        const body = {
            'amount': 100,
            'currency': "TWD",
            'orderid': 'test0001',
            packages:[
                {
                    'id':'',
                    'amount':'',
                    'products':[{
                        'name':'',
                        'quantity':'',
                        'price':''
                    }]
                }
            ]
            redirectUrls: {
                'confirmUrl': '',
                'cancelUrl': ''
            }


        };
    </script>
}