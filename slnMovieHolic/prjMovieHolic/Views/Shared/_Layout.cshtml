                                                            <a>歡迎！@ViewBag.userName</a>
                                                            <ul class="endend">
                                                                <li>
                                                                    <button><a href="@Url.Action("memberIndex", "memberFront",new{ id=ViewBag.userId})" style="color:black; width:60px">會員中心</a></button>
