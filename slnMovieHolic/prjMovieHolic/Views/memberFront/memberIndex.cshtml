@model prjMovieHolic.ViewModels.CMemberAndOtherViewModel
@{
    ViewData["Title"] = "memberIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tabler/icons-webfont@latest/tabler-icons.min.css">

<div id="page2">
    <div class="body1">
        <div class="body3">
            <div class="main">
                <!-- content -->
                <section id="content">
                    <div class="line1 wrapper">

                        <div class="hotMoviePlaceLine">
                            <ul class="hotMoviePlaceLineMenu">
                                <li style="font-size: 26px;">
                                    <span class="memberIndexTopMarker">
                                        <img src="/images/menu_marker.png" alt="">
                                    </span>會員專區
                                </li>
                                <li></li>
                            </ul>
                        </div>
                        <div class="memberIndexTop">
                            @{
                                switch (Model.Member.FMembershipId)
                                {
                                    case 1:
                                        @:<img src="/images/membership/diamond.png" alt="" width="10">
                                        break;
                                    case 2:
                                        @:<img src="/images/membership/medal.png" alt="" width="10">
                                        break;
                                    case 3:
                                        @:<img src="/images/membership/user.png" alt="" width="10">
                                        break;

                                }
                            }
                            <div class="memberIndexTopName">
                                <h5>@Model.Member.FMembership.FMembershipName</h5>
                                <h3>Hi！@Model.Member.FName</h3>
                            </div>
                        </div>

                        <div class="addBorder"></div>
                        <div class="myBr"></div>

                        <div class="memberIndexButtonPlace">

                            <button><div><a href="@Url.Action("memberList", "memberFront",new{id=Model.Member.FMemberId})">會員資料</a> </div></button>
                            <button><div><a href="@Url.Action("orderList", "memberFront",new{id=Model.Member.FMemberId})">未取票訂單</a></div></button>
                            <button><div><a href="@Url.Action("favoriteList", "memberFront",new{id=Model.Member.FMemberId})">我的收藏<br>@Model.MemberActionNow.Count 部熱映中</a></div></button>
                            <button><div><a href="@Url.Action("couponList", "memberFront",new{id=Model.Member.FMemberId})">我的優惠券<br>可用 @Model.CouponList.Count 張</a></div></button>
                        </div>
                        <div class="myBr"></div>
                        <div class="addBorder"></div>
                        <div class="myBr"></div>
                        <div class="memberIndexBottom">
                            <h3>年度消費金-- @Model.TotalPrice 元</h3>
                            <div class="justPay">
                                <span><img src="/images/menu_marker.png" alt=""></span>
                                @{
                                    int Membership2 = 5000 - Model.TotalPrice;
                                    int Membership3 = 10000 - Model.TotalPrice;
                                    if (Model.Member.FMembershipId == 3)
                                    {
                                        <h4>12/31前再消費 @Membership2 元，即可升等為 黃金會員</h4>
                                    }
                                    else if (Model.Member.FMembershipId == 2)
                                    {
                                        <h4>12/31前再消費 @Membership3 元，即可升等為 白金會員</h4>
                                    }
                                    else
                                    {
                                        <h4>12/31前再消費 @Membership3 元，明年繼續保有白金會員資格</h4>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>

