@model prjMovieHolic.Models.TArticle

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_ArticleLayout.cshtml";
}

<h1>Edit</h1>

<h4>TArticle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FArticleId" />
            <div class="form-group">
                <label asp-for="FMemberId" class="control-label"></label>
                <select asp-for="FMemberId" class="form-control" asp-items="ViewBag.FMemberId"></select>
                <span asp-validation-for="FMemberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FMovieId" class="control-label"></label>
                <select asp-for="FMovieId" class="form-control" asp-items="ViewBag.FMovieId"></select>
                <span asp-validation-for="FMovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FTitle" class="control-label"></label>
                <input asp-for="FTitle" class="form-control" />
                <span asp-validation-for="FTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FTimeCreated" class="control-label"></label>
                <input asp-for="FTimeCreated" class="form-control" />
                <span asp-validation-for="FTimeCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FTimeEdited" class="control-label"></label>
                <input asp-for="FTimeEdited" class="form-control" />
                <span asp-validation-for="FTimeEdited" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FBlockJson" class="control-label"></label>
                <input asp-for="FBlockJson" class="form-control" />
                <span asp-validation-for="FBlockJson" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FIsPublic" /> @Html.DisplayNameFor(model => model.FIsPublic)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
